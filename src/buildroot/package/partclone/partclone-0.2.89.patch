+/// convert the size
+char* filesize_conv(double size, char *buf, size_t len) {
+    int i = 0;
+    const char* units[] = {"iB","KiB","MiB","GiB","TiB","PiB","EiB","ZiB","YiB"};
+    while (size > 1024) {
+        size /= 1024;
+        i++;
+    }
+    snprintf(buf, len, "%.*f %s", i, size, units[i]);
+    return buf;
